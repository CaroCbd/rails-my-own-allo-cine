<div class="container mt-3">
  <div class="bg-dark text-light">
    <h3 class="mb-3 p-4"> Create a new list </h3>
      <%= simple_form_for @list do |f| %>
        <div class="ms-3 row g-3 d-flex justify-content-center align-items-center">
          <div class="col">
            <%= f.input :name, input_HTLM: {class:"form-control"}, label_HTLM: {class:"form-label"} %>
          </div>
          <div class="col">
            <%= f.input :photo, as: :file %>
          </div>
          <div class="col">
            <div class="d-flex justify-content-center align-items-center">
              <%= f.submit "Create a new list", class:"btn btn-light mt-3" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
