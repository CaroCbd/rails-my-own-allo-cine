<div
  class="card-category position-relative mb-5"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 500, crop: :fill %>')">
  <h1>
    <%= @list.name %>
  </h1>
  <%= link_to new_list_bookmark_path(@list), class:"btn btn-success btn-lg sticky-top mt-4" do %>
    <i class="fa-solid fa-bookmark"></i>
    New bookmark
  <% end %>
</div>

<div class="container">

  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-3">
          <div class="col-md-4">
            <img src=" <%= bookmark.movie.poster_url%>" class="img-fluid rounded-start" alt="<%= bookmark.movie.title%>">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <%= bookmark.movie.title%>
              </h5>
              <p class="card-text fst-italic">
                <%= bookmark.comment%>
              </p>
              <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete this bookmark ?"} do %>
                <i class="fa-regular fa-trash-can text-danger text-end"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
